<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alumnoCard"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    cardview:cardCornerRadius="0dp"
    cardview:cardElevation="0dp"
    cardview:theme="@style/RaisedButtonDarkBusqueda"
    android:onClick="goBusqueda"
    >
    <LinearLayout
        android:background="@color/busqueda_primary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:padding="3dp"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/busqueda_icon"/>
        <TextView
            android:background="@color/busqueda_primary"
            android:textColor="@color/icons"
            android:textSize="@dimen/card_font_size"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="BÃºsqueda de Medicamentos"
            android:layout_weight="8"/>

        <ImageView
            android:padding="3dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/adelante"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>